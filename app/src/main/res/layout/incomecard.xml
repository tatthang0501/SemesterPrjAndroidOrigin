<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvIncomeCardMoney"
            android:layout_weight="1"
            android:text="200000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvIncomeCardDate"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="20/05/2021"/>

        <TextView
            android:id="@+id/tvIncomeCardType"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tiền ngoài"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/tvIncomeCardDescription"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tiền hoàn thuế"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>